journal = {JOURNAL OF ENVIRONMENTAL QUALITY},
number = {5},
pages = {1651--1664},
title = {{Quantifying the impact of regular cutting on vegetative buffer efficacy for nitrogen-15 sequestration}},
volume = {34},
year = {2005}
}
