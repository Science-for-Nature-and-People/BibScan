title = {{In search of allelopathy: an eco-historical view of the investigation of chemical inhibition in California coastal sage scrub and chamise chaparral}},
volume = {131},
year = {2004}
}
@article{ISI:000236289600018,
abstract = {Exotic species have been observed to be more prevalent ill sites where
