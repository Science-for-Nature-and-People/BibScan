doi = {10.1674/0003-0031-173.1.73},
issn = {0003-0031},
journal = {AMERICAN MIDLAND NATURALIST},
month = {jan},
number = {1},
pages = {73--87},
title = {{Ecosystem CO2 Exchange in Response to Nitrogen and Phosphorus Addition in a Restored, Temperate Grassland}},
