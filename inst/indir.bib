issn = {1550-7424},
journal = {RANGELAND ECOLOGY {\&} MANAGEMENT},
month = {may},
number = {3},
pages = {339--347},
title = {{Historical Forage Productivity and Cost of Capital for Cow-Calf Production in California}},
volume = {66},
year = {2013}
}
