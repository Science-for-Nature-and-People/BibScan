journal = {RANGELAND ECOLOGY {\&} MANAGEMENT},
keywords = {cheatgrass; dyer's woad; growth form; invasion res},
month = {nov},
number = {6},
pages = {657--666},
publisher = {SOC RANGE MANAGEMENT},
title = {{Invasion is Contingent on Species Assemblage and Invasive Species Identity in Experimental Rehabilitation Plots}},
type = {Article},
