pages = {144--155},
title = {{Assessment of VIIRS 375 m active fire detection product for direct burned area mapping}},
volume = {160},
year = {2015}
}
@article{ISI:000245682100001,
abstract = {Soil amendments are commonly used to regenerate nutrient levels on
disturbed construction sites or mined lands prior to revegetation.
Management of nitrogen (N) inputs to the degraded substrates is
difficult because the low level of ambient fertility on disturbed
substrates requires large total N inputs to sustain revegetative growth,
but it also requires low N bioavailability in order to avoid weedy
invasion and eutrophication of local watersheds. Commonly available soil
amendment materials have a wide variety of N contents and release rates,
making specification of appropriate N amendments difficult. We compared
N release rates of a variety of organic-based soil amendments and
chemical fertilizers in long-term aerobic incubation chambers in the lab
and at a field revegetation site. The N release rate from these
amendments fell into four general groups: (1) rapid N release from
soluble chemical fertilizer formulations, (2) longer, controlled N
release from chemical-based, slow-release formulations, and a two-phase
release pattern (rapid initial phase, slower second phase) from (3)
organic-based blends, as well as (4) unsupplemented municipal yard-waste
composts. The release rates from organic-based amendments were about
three times faster in the 30 degrees C laboratory incubations than in
the cool, moist winter growing season at a field site in the Central
Valley of California. Relative rates of N release can be compared
between amendment materials to help guide selection of N amendments,
according to the plant-growth goals of the revegetation project.
Copyright (c) 2006 John Wiley {\&} Sons, Ltd.},
author = {Claassen, V P and Carey, J L},
