keywords = {Ecosystem service,Facilitation,Nassellapulchra,Quercus douglasii,Restoration,Sierra Nevada foothill rangeland},
number = {10},
pages = {2555--2568},
title = {{Oak conservation maintains native grass stands in an oak woodland-annual grassland system}},
volume = {21},
year = {2012}
}
