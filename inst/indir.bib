doi = {10.1890/1051-0761(2003)013{[}0575:CSLDAR]2.0.CO;2},
issn = {1051-0761},
journal = {ECOLOGICAL APPLICATIONS},
keywords = {California grasslands; community; competition; dis},
month = {jun},
number = {3},
pages = {575--592},
publisher = {ECOLOGICAL SOC AMER},
title = {{Competition, seed limitation, disturbance, and reestablishment of California native annual forbs}},
