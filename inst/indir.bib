in a Salinizing World, Vrije Univ, Amsterdam, NETHERLANDS, APR 18-19,
2012},
author = {Glenn, Edward P and Anday, Tekie and Chaturvedi, Rahul and Martinez-Garcia, Rafael and Pearlstein, Susanna and Soliz, Deserie and Nelson, Stephen G and Felger, Richard S},
doi = {10.1016/j.envexpbot.2012.05.002},
